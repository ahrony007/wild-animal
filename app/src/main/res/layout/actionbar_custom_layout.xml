<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- Left-aligned icon or logo -->


    <ImageView
        android:id="@+id/actionbar_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_menu_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Wild Aminal"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <!-- Right-aligned icons or menu options -->
    <RelativeLayout
        android:id="@+id/actionbar_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="0dp">


<!--        <ImageView-->
<!--            android:id="@+id/actionbar_icon1"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:padding="2dp"-->
<!--            android:src="@drawable/ic_three_dot_24"-->
<!--            android:layout_alignParentEnd="true" />-->

        <ImageView
            android:id="@+id/actionbar_icon2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/profileicon"
            android:paddingBottom="6dp"
            android:layout_toStartOf="@id/actionbar_icon2" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/actionbar_logo"
        android:layout_marginTop="-5dp"
        android:background="@drawable/line_divider"/>

</RelativeLayout>

